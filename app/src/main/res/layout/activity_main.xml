<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#F5F5DC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamów kawe☕!"
        android:background="#500000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="33dp"
        android:textColor="#D75738"/>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Latte"
            android:id="@+id/radiolatte"
            android:textColor="#6B4226"
            android:textSize="20dp">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Cappuccino"
            android:id="@+id/radiocappuccino"
            android:textColor="#6B4226"
            android:textSize="20dp">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Espresso"
            android:id="@+id/radioespresso"
            android:textColor="#6B4226"
            android:textSize="20dp">>

        </RadioButton>

    </RadioGroup>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6B4226"
        android:layout_margin="10dp"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mleko🥛"
        android:textColor="#D2691E"
        android:textSize="19dp"
        android:layout_margin="10dp"
        >

    </CheckBox>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cukier🍬"
        android:textColor="#D2691E"
        android:textSize="19dp"
        android:layout_margin="10dp"
        >

    </CheckBox>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6B4226"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wybierz ilość kaw:"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="#40E0D0"
        >

    </TextView>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="5"
        android:progressBackgroundTint="#FF5722"
        android:progressTint="#6B5A2C"
        android:thumbTint="#2196F3" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6B4226"
        android:layout_margin="20dp"/>


    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Zatwierdź swój wybór"
        android:layout_gravity="center"
        android:backgroundTint="#E9CBA7"
        android:textColor="@color/black"
        >

    </Button>


</LinearLayout>